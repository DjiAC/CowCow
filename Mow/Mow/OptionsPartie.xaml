<Window x:Class="Mow.OptionsPartie"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="OptionsPartie" Height="768" Width="1024">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="55*"/>
            <ColumnDefinition Width="961*"/>
        </Grid.ColumnDefinitions>
        <TextBlock x:Name="titre" Margin="346,54,0,0" TextWrapping="Wrap" Text="MOWJOW" Height="38" Width="247" VerticalAlignment="Top" HorizontalAlignment="Left" FontSize="24" FontWeight="Bold" TextAlignment="Center" Grid.Column="1"/>
        <TextBox x:Name="nbjoueurs" Grid.Column="1" HorizontalAlignment="Left" Height="50" Margin="272,197,0,0" TextWrapping="Wrap" Text="Nombre de Joueurs" VerticalAlignment="Top" Width="260" Cursor="Hand" TextChanged="nbjoueurs_TextChanged" FontSize="24" VerticalContentAlignment="Center" HorizontalContentAlignment="Center"/>
        <ComboBox Grid.Column="1" HorizontalAlignment="Left" Margin="532,197,0,0" VerticalAlignment="Top" Width="98" Cursor="Hand" Height="50" SelectionChanged="ComboBox_SelectionChanged"/>
        <ComboBox x:Name="humains" Grid.Column="1" HorizontalAlignment="Left" Margin="233,319,0,0" VerticalAlignment="Top" Width="73" Cursor="Hand" Height="75" SelectionChanged="ComboBox_SelectionChanged" ToolTip=""/>
        <TextBox x:Name="nbjoueurs_Copy" Grid.Column="1" HorizontalAlignment="Left" Height="75" Margin="41,319,0,0" TextWrapping="Wrap" Text="Nombre de Joueurs humains" VerticalAlignment="Top" Width="192" Cursor="Hand" TextChanged="nbjoueurs_TextChanged" FontSize="20" VerticalContentAlignment="Center" HorizontalContentAlignment="Center"/>
        <ComboBox x:Name="humains_Copy" Grid.Column="1" HorizontalAlignment="Left" Margin="787,319,0,0" VerticalAlignment="Top" Width="73" Cursor="Hand" Height="75" SelectionChanged="ComboBox_SelectionChanged" ToolTip=""/>
        <TextBox x:Name="nbjoueurs_Copy1" Grid.Column="1" HorizontalAlignment="Left" Height="75" Margin="595,319,0,0" TextWrapping="Wrap" Text="Nombre limite de mouches" VerticalAlignment="Top" Width="192" Cursor="Hand" TextChanged="nbjoueurs_TextChanged" FontSize="20" VerticalContentAlignment="Center" HorizontalContentAlignment="Center"/>
        <Button x:Name="lancement" Content="LANCER" Grid.Column="1" HorizontalAlignment="Center" Margin="595,616,101,61" VerticalAlignment="Center" Width="265" Height="60" FontSize="36" Cursor="Hand"/>
        <Button x:Name="menu" Content="MENU" Grid.Column="1" HorizontalAlignment="Left" Margin="36,10,0,0" VerticalAlignment="Top" Width="131" Cursor="Hand" Height="35" FontSize="16"/>

    </Grid>
</Window>
