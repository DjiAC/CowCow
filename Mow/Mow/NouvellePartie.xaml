        <Button x:Name="nouvelle_partie" Content="NOUVELLE PARTIE" HorizontalAlignment="Left" Margin="337,278,0,0" VerticalAlignment="Top" Width="230" Grid.Column="1" Height="60" FontSize="24" Cursor="Hand"/>
