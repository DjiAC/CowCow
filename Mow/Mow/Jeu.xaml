<Window x:Class="Mow.JeuWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Mow Jow - Jeu" Height="768" Width="1024"
        Icon="Images/Home_Button.png"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize">
    <Window.Background>
        <ImageBrush ImageSource="Images/Game.jpg"/>
    </Window.Background>
    <Grid Margin="0" Height="740" VerticalAlignment="Bottom">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0*"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <TextBlock HorizontalAlignment="Left" Margin="806,10,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="150" Width="138" FontSize="26" Grid.ColumnSpan="2" FontFamily="KBTheFlowerFarm"><Run Text="Joueur 1 "/><LineBreak/><Run Text="Joueur 2 "/><LineBreak/><Run Text="Joueur 3 "/><LineBreak/><Run Text="Joueur 4"/><LineBreak/><Run Text="Joueur 5"/></TextBlock>
        
        <Rectangle Fill="#FFF4F4F5" HorizontalAlignment="Left" Height="350" Margin="180,198,0,0" Stroke="Black" VerticalAlignment="Top" Width="600" Opacity="0.5" Grid.ColumnSpan="2"/>
        
        <TextBlock HorizontalAlignment="Left" Margin="862,656,0,0" TextWrapping="Wrap" Text="ETABLE" VerticalAlignment="Top" Height="46" Width="82" FontSize="20" Grid.ColumnSpan="2"/>
        <Rectangle Fill="#FFF4F4F5" HorizontalAlignment="Left" Height="148" Margin="824,558,0,0" Stroke="Black" VerticalAlignment="Top" Width="140" Opacity="0.5" Grid.ColumnSpan="2"/>
        <Image HorizontalAlignment="Left" Height="110" Margin="299,626,0,0" VerticalAlignment="Top" Width="60" Grid.ColumnSpan="2"/>
        <Image HorizontalAlignment="Left" Height="110" Margin="359,626,0,0" VerticalAlignment="Top" Width="60" Grid.ColumnSpan="2"/>
        <Image HorizontalAlignment="Left" Height="110" Margin="423,626,0,0" VerticalAlignment="Top" Width="60" Grid.ColumnSpan="2"/>
        <Image HorizontalAlignment="Left" Height="110" Margin="483,626,0,0" VerticalAlignment="Top" Width="60" Grid.ColumnSpan="2"/>
        <Image HorizontalAlignment="Left" Height="110" Margin="548,626,0,0" VerticalAlignment="Top" Width="60" Grid.ColumnSpan="2"/>
        <Rectangle Fill="#FFF4F4F5" HorizontalAlignment="Left" Height="150
                   " Margin="180,10,0,0" Stroke="Black" VerticalAlignment="Top" Width="100" Grid.ColumnSpan="2"/>
        <Rectangle Fill="#FFF4F4F5" HorizontalAlignment="Left" Height="150" Margin="356,10,0,0" Stroke="Black" VerticalAlignment="Top" Width="100" Grid.ColumnSpan="2"/>
        <Rectangle Fill="#FFF4F4F5" HorizontalAlignment="Left" Height="150" Margin="528,10,0,0" Stroke="Black" VerticalAlignment="Top" Width="100" Grid.ColumnSpan="2"/>
        <Rectangle Fill="#FFF4F4F5" HorizontalAlignment="Left" Height="150" Margin="680,10,0,0" Stroke="Black" VerticalAlignment="Top" Width="100" Grid.ColumnSpan="2"/>
        <Image x:Name="Sens" HorizontalAlignment="Left" Height="214" Margin="824,274,0,0" VerticalAlignment="Top" Width="140" Source="Images/SensHoraire.png" Opacity="0.8" Grid.ColumnSpan="2"/>
        <WrapPanel>
            <TextBlock Text="Votre main" />
            <TextBox Text="{Binding partie.NomJoueur}" Width="150" />
        </WrapPanel>
        <TextBox HorizontalAlignment="Left" Height="148" Margin="248,558,0,0" TextWrapping="Wrap" Text="Nos cartes" VerticalAlignment="Top" Width="480" TextChanged="TextBox_TextChanged" FontSize="16" TextAlignment="Center" Grid.ColumnSpan="2"/>
        <TextBox HorizontalAlignment="Left" Height="49" Margin="824,198,0,0" TextWrapping="Wrap" Text="Manche #" VerticalAlignment="Top" Width="140" TextChanged="TextBox_TextChanged_1" FontSize="24" Grid.ColumnSpan="2" FontFamily="KBTheFlowerFarm" Background="{x:Null}" TextAlignment="Center" BorderBrush="{x:Null}"/>
        <TextBlock HorizontalAlignment="Left" Height="148" Margin="10,558,0,0" Text="{Binding partie.NomJoueur}" VerticalAlignment="Top" Width="140" FontSize="36" Grid.ColumnSpan="2" Background="White" FontWeight="Bold" Foreground="Black"/>
        <Image HorizontalAlignment="Left" Height="214" Margin="10,274,0,0" VerticalAlignment="Top" Width="140" Source="Images/Verso.png" Opacity="0.8" Grid.ColumnSpan="2"/>
        <Button x:Name="button" HorizontalAlignment="Left" VerticalAlignment="Top" Width="130" Height="123" BorderThickness="0" Margin="10,10,0,0" Grid.ColumnSpan="2" Click="MenuClick">
            <Button.Background>
                <ImageBrush ImageSource="Images/Home_Button.png"/>
            </Button.Background>
            <Hyperlink NavigateUri="Menu.xaml"/>
        </Button>
        <StackPanel Margin="356,613,414,67" Grid.ColumnSpan="2">
            <WrapPanel>
                <TextBlock Text="Window title:  " />
                <TextBox Text="{Binding partie.NomJoueur}" Width="150" />
            </WrapPanel>            
        </StackPanel>
    </Grid>
</Window>
